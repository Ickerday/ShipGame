extends Node

class_name VisibilityComponent

var is_spotted := false

###############################################################################
# Builtin functions                                                           #
###############################################################################

func _ready():
	if not is_spotted:
		get_parent().hide()

###############################################################################
# Public functions                                                            #
###############################################################################

func spot():
	get_parent().show()


func hide():
	get_parent().hide()


